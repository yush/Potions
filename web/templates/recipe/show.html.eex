
<h2>Show recipe</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @recipe.name %>
  </li>

  <li>
    <strong>Uploaddate:</strong>
    <%= @recipe.uploadDate %>
  </li>

  <li>
      <%= link to: "/" <> recipe_url(@recipe, :original) do %>
      <img src="/<%= recipe_url(@recipe, :thumb) %>" />
      <% end %>
  </li>

</ul>

<%= link "Edit", to: user_recipe_path(@conn, :edit, @user, @recipe) %>
<%= link "Back", to: user_recipe_path(@conn, :index, @user) %>
